{
    "name": "nestjs-authentication",
    "version": "0.4.1",
    "description": "A nestjs module that support multiple authentications provider",
    "author": "Alex Hermann <contact@pop-code.com>",
    "repository": "https://github.com/Pop-Code/nestjs-authentication.git",
    "license": "MIT",
    "main": "dist/index.js",
    "types": "./dist/index.d.ts",
    "scripts": {
        "build": "rm -Rf dist && tsc -b tsconfig.build.json",
        "format": "prettier \"**/*.ts\" --ignore-path ./.prettierignore --write && git status",
        "lint": "eslint .",
        "doc": "rm -Rf ./docs && typedoc && touch ./docs/.nojekyll",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
    },
    "peerDependencies": {
        "@nestjs/common": "^8",
        "@nestjs/core": "^8",
        "@nestjs/passport": "^8",
        "nestjs-console": "^7.0.1",
        "passport": "^0.5.2"
    },
    "dependencies": {
        "debug": "^4.3.3",
        "jsonwebtoken": "^8.5.1",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "remove": "^0.1.5"
    },
    "devDependencies": {
        "@nestjs/common": "8.2.6",
        "@nestjs/core": "8.2.6",
        "@nestjs/passport": "8.1.0",
        "@nestjs/platform-express": "^8.2.6",
        "@nestjs/testing": "8.2.6",
        "@types/debug": "^4.1.7",
        "@types/express": "4.17.13",
        "@types/express-session": "^1.17.4",
        "@types/jest": "27.4.0",
        "@types/node": "17.0.14",
        "@types/passport": "1.0.7",
        "@types/passport-jwt": "^3.0.6",
        "@types/passport-local": "^1.0.34",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "5.10.2",
        "@typescript-eslint/parser": "5.10.2",
        "codecov": "^3.8.3",
        "eslint": "8.8.0",
        "eslint-config-prettier": "8.3.0",
        "express-session": "^1.17.2",
        "jest": "27.4.7",
        "passport": "0.5.2",
        "prettier": "2.5.1",
        "reflect-metadata": "0.1.13",
        "rxjs": "7.5.2",
        "supertest": "^6.2.2",
        "ts-jest": "27.1.3",
        "ts-node": "10.4.0",
        "tsconfig-paths": "3.12.0",
        "typedoc": "0.22.11",
        "typescript": "4.5.5"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "src/**/*.{js,jsx,ts}",
            "!src/index.ts",
            "!**/test/**"
        ],
        "coverageDirectory": "./coverage"
    }
}
